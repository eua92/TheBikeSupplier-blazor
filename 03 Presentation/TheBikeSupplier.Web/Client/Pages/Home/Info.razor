<div class="row row-content align-items-center d-flex justify-content-center @(IsReversed ? "flex-row-reverse" : "")">
    <div class="col-12 col-lg-4">
        <a href="@LinkPath">
            <img src="@ImagePath" class="img-fluid" alt="@SectionTitle">
        </a>
    </div>
    <div class="col-12 col-lg-7">
        <h2 class="mt-3 mt-lg-0">@SectionTitle</h2>
        <p>
            @SectionInfo
        </p>
        <a href="@LinkPath" class="btn btn-info">@LinkText</a>
    </div>
</div>

@code {
    [Parameter] public string SectionInfo { get; set; }
    [Parameter] public string SectionTitle { get; set; }
    [Parameter] public string LinkPath { get; set; }
    [Parameter] public string LinkText { get; set; }
    [Parameter] public string ImagePath { get; set; }
    [Parameter] public bool IsReversed { get; set; }
}
